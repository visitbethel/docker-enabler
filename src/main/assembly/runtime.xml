<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>runtime</id>
	<baseDirectory>
	</baseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>ds_jars</outputDirectory>
			<scope>compile</scope>
			<excludes>
				<exclude>*:fabric</exclude>
				<exclude>*:commons-compress</exclude>
				<exclude>*:aopalliance</exclude>
			</excludes>
			<includes>
				<include>*:*</include>
			</includes>

		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/runtime</directory>
			<outputDirectory/>
			<excludes>
				<exclude>container.xml</exclude>
				<exclude>grid-library.xml</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/runtime</directory>
			<outputDirectory/>
			<filtered>true</filtered>
			<includes>
				<include>container.xml</include>
				<include>grid-library.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>./target</directory>
			<outputDirectory>ds_jars</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>ds_jars</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/shell</directory>
			<outputDirectory>content/docker/shell</outputDirectory>
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/docker_context</directory>
			<outputDirectory>content/docker/docker_context</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/docker_logs</directory>
			<outputDirectory>content/docker/docker_logs</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/docker_stats</directory>
			<outputDirectory>content/docker/docker_stats</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/docker_envs</directory>
			<outputDirectory>content/docker/docker_envs</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/content/docker_execs</directory>
			<outputDirectory>content/docker/docker_execs</outputDirectory>
			<includes>
				<include>*.cmds</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>